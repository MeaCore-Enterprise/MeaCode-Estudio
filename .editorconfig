# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{yml,yaml}]
indent_size = 2

[*.toml]
indent_size = 2

[*.rs]
indent_size = 4
indent_style = space

[*.{ts,tsx,js,jsx}]
indent_size = 2
indent_style = space

[*.{css,scss}]
indent_size = 2

[Makefile]
indent_style = tab

