{
  "$schema": "https://schema.tauri.app/config/1",
  "package": {
    "productName": "MeaCode Estudio",
    "version": "0.1.0"
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:3000",
    "beforeBuildCommand": "npm run export",
    "distDir": "../out"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "identifier": "com.meacode.estudio",
      "targets": ["msi", "nsis", "app", "dmg", "appimage", "deb", "rpm"],
      "icon": ["../src/app/favicon.ico"]
    },
    "windows": [
      {
        "title": "MeaCode Estudio",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "allowlist": {
      "shell": { "open": true },
      "dialog": { "open": true, "save": true },
      "fs": { "all": true, "scope": ["**"] },
      "path": { "all": true }
    }
  }
}
